{% extends 'base.html.twig' %}

{% block title %}Shop{% endblock %}

{% block body %}
    {% include 'components/Banner.html.twig' with{'title': 'Browse Courses'} %}

    <form class="flex items-center" action="{{ path('app_courses') }}">
        <select class="p-2 cursor-pointer" name="category" id="">
            <option disabled selected>Select a category</option>
            {% for category in categories %}
                <option value="{{ category.id }}">{{ category.name }}</option>
            {% endfor %}
        </select>
        <button class="flex items-center " type="submit">
            <span class="material-symbols-outlined">
            search
        </span>
        </button>

        <a class="hover:underline text-gray-600 ml-5" href="{{ path('app_courses') }}">
            reset
        </a>
    </form>



    <div class="grid md:grid-cols-4 gap-2">
        {% for course in courses %}
            {% include 'components/Course_Card.html.twig' with{'course': course} %}
        {% endfor %}

    </div>
{% endblock %}
